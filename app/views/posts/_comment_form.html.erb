<div class="w-50">
  <%= simple_form_for [post, comment], data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |f| %>
    <%= f.input :content, as: :text, label: false, input_html: { class: "text-black" }, required: true  %>
    <%= f.submit "Leave a comment", class: "btn btn-warning text-white" %>
  <% end %>
</div>
